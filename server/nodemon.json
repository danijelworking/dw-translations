{
    "ignore": [".git", "node_modules/", "dist/", "lib", "coverage/"],
    "watch": ["server/**/*.ts"],
    "exec": "ts-node ./server.ts",
    "execMap": {
        "ts": "node -r ts-node/register"
    },
    "env": {
        "NODE_ENV": "development",
        "NODE_OPTIONS": "--inspect=0.0.0.0",
        "FORCE_COLOR": 3
    },
    "ext": "js,json,ts"
}